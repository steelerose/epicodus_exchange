$('#new_comment').remove();
$('.new-comment-request').show();
<% if @post.nil? %>
  $('#answer-show<%= @answer.id %>').empty().append('<%= j render("posts/answers_comments", answer: @answer) %>');
<% else %>
  $('#post-show<%= @post.id %>').empty().append('<%= j render("posts/posts_comments", post: @post) %>');
<% end %>
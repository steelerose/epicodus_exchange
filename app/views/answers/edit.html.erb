<% provide(:title, 'Edit answer') %>

<div class="row">
  <h4 class="center">Answering:<br/><%= @answer.post.name %></h4>
</div>

<div class="row">
  <div class="large-offset-1 large-10 small-12">
    <div class="panel">
      <p><%= simple_format(@answer.post.content) %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-10 large-offset-1 small-12">
    <h6 class="center subheader">
      To display code, use:<br/><pre>&lt;pre&gt; &lt;/pre&gt;</pre>
    </h6>

    <%= form_for(@answer) do |f| %>
      <%= render 'shared/error_messages', object: @answer %>

      <%= f.label :content, 'Answer:' %>
      <%= f.text_area :content, class: 'text-area large-text-input' %>

      <%= f.hidden_field :answer_id, value: @answer.id %>

      <%= f.submit 'Save changes', class: 'button small' %>
    <% end %>
  </div>
</div>
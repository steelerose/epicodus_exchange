<% provide(:title, 'Add post') %>

<div class="row">
  <h2 class="center">Add Post</h2>
  <h6 class="center subheader">
    To display code, use html tag:<br/><b><pre>&lt;pre&gt; &lt;/pre&gt;</pre></b>
  </h6>
</div>

<div class="row">
  <div class="large-10 large-offset-1 small-12">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages', object: @post %>

      <%= f.label :name, 'Post title:' %>
      <%= f.text_field :name, :autofocus => true %>

      <%= f.label :content, 'Post content:' %>
      <%= f.text_area :content, class: 'text-area large-text-input' %>

      <%= f.submit 'Submit post', class: 'button small' %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="large-offset-2 large-9 small-12">
    <ul class="plain-ul comments-ul" id="post-show<%= post.id %>">
      <% post.comments.each do |comment| %>
        <li>
          <hr class="super-thin">
          <span class="comment-content"><%= comment.content %></span>
          <p class="comment-info post-comments">
            <%= link_to "#{comment.user.first_name} #{comment.user.last_name}", user_path(comment.user), target: '_blank' %>
             | <%= comment.created_at.strftime("%-d %b '%y") %>
            <% if can? :destroy, comment %>
             | <%= link_to 'delete', comment_path(id: comment.id), method: :delete, data: { confirm: 'Delete comment?' } %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>